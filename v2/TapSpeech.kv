
windowManager:
    welcomeScreen:
    loginScreen:
    registerScreen:
    patientUpScreen:
    patientDownScreen:
    contactsScreen:
    caretakerScreen:

<welcomeScreen>:
    name: "welcome"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg/welcome.png'
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        size_hint: 0.45, 0.15
        pos_hint: {"right":0.74,"top":0.55}
        Button:
            id: btn_login
            background_color: 0, 0, 0, 0
            on_release: app.root.current = 'login'
            Image:
                source: 'images/icons/Login.png'
                pos: self.parent.pos
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                width: self.parent.width
                height: self.parent.width/self.image_ratio
        Button:
            id: btn_register
            background_color: 0, 0, 0, 0
            on_release: app.root.current = 'register'
            Image:
                source: 'images/icons/Register.png'
                pos: self.parent.pos
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                width: self.parent.width
                height: self.parent.width/self.image_ratio

<loginScreen>:
    canvas.before:
        Color:
            rgba: 0.88, 0.92, 0.92, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/English_login_background.png'
    FloatLayout:
        #pos_hint:{'x':0.2,'y':0.4}
        #size_hint{'x':0.5,'y':0.1}
        Button:
            source: 'images/Register.png'
            font_size: 32
            size_hint: (0.3, 0.3)
            on_release: app.root.current = 'login'
