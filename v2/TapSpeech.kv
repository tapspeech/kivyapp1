#:import NoTransition kivy.uix.screenmanager.NoTransition

windowManager:
    #transition: NoTransition()
    welcomeScreen:
    loginScreen:
    registerScreen:
    patientUpScreen:
    patientDownScreen:
    contactsScreen:
    caretakerScreen:

<welcomeScreen>:
    FloatLayout:
        Label:
            text:'Welcome'
            font_name:'Pacifico'
        Button:
            text: 'Welcome screen'
            font_size: 32
            on_release: app.root.current = 'login'

        Image:
            id: Logo_With_Text
            source: 'images/Logo_With_Text.png'
            pos_hint: {'x':0.1,'y':0.1}
            #size_hint: {}

<loginScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to welcome page'
            on_press: root.manager.current = 'welcome'

