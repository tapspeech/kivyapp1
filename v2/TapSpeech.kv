#:import NoTransition kivy.uix.screenmanager.NoTransition

windowManager:
    #transition: NoTransition()
    welcomeScreen:
    loginScreen:
    registerScreen:
    PatientUpScreen:
    PatientDownScreen:
    ContactsScreen:
    CaretakerScreen:

<welcomeScreen>:
    FloatLayout:
        Label:
            text:'Welcome'
            font_name:'Pacifico'

        Button:
            text: 'Welcome screen'
            font_size: 32
            on_release: app.root.current = 'login'

        Image:
            id: Tall_Cylinder_Image
            source: 'images/Logo_With_Text.png'
            pos_hint: {'x':0.1,'y':0.1}
            #size_hint: {}

<loginScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to welcome page'
            on_press: root.manager.current = 'welcome'

<registerScreen>:
    name: 'register'

<PatientUpScreen>:
    name: 'patient_up'

    FloatLayout:
        Label:
            text:'Welcome'
            font_name:'Pacifico'

        Button:
            text: 'Next screen test'
            font_size: 32
            on_release: app.root.current = 'welcome'

        Image:
            id: Tall_Cylinder_Image
            source: 'images/Logo_With_Text.png'
            pos_hint: {'x':0.1,'y':0.1}
            #size_hint: {}

<PatientDownScreenScreen>:
    name: 'patient_down'

<ContactsScreenScreen>:
    name: 'contacts'

<CaretakerScreenScreen>:
    name: 'caretaker'
