
windowManager:
    en_welcomeScreen:
    en_loginScreen:
    en_registerScreen:
    en_patientUpScreen:
    en_patientDownScreen:
    en_contactsScreen:
    en_caretakerScreen:

<en_welcomeScreen>:
    name: "welcome"
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg/welcome.png'
    BoxLayout:
        orientation: 'vertical'
        spacing: 50
        size_hint: 0.45, 0.15
        pos_hint: {"right":0.73,"top":0.55}
        Button:
            id: btn_login
            background_color: 0, 0, 0, 0
            on_release: app.root.current = 'login'
            Image:
                source: 'images/icons/Login.png'
                pos: self.parent.pos
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                width: self.parent.width
                height: self.parent.width/self.image_ratio
        Button:
            id: btn_register
            background_color: 0, 0, 0, 0
            on_release: app.root.current = 'register'
            Image:
                source: 'images/icons/Register.png'
                pos: self.parent.pos
                allow_stretch: True
                keep_ratio: True
                size_hint: None, None
                width: self.parent.width
                height: self.parent.width/self.image_ratio
    Button:
        id: change_language
        size_hint: 0.2, 0.05
        pos_hint: {"right":0.6,"top":0.1}
        background_color: 0, 0, 0, 0
        on_release: app.root.current = 'login'
        Image:
            source: 'images/icons/chinese_lang.png'
            pos: self.parent.pos
            allow_stretch: True
            keep_ratio: True
            size_hint: None, None
            width: self.parent.width
            height: self.parent.width/self.image_ratio

<en_loginScreen>:
    canvas.before:
    #    Color:
    #        rgba: 0.88, 0.92, 0.92, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg/login.png'

    FloatLayout:
        # Fix below line from button to text field
        Button:
            size_hint: (0.82, 0.085)
            background_color:0,0,0,0
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            Image:
                source: 'images/Eng_login_username_button.png'
                size: self.parent.size
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        # Fix below line from button to text field
        Button:
            size_hint: (0.82, 0.085)
            background_color:0,0,0,0
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            Image:
                source: 'images/Eng_login_birthday.png'
                size: self.parent.size
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint: (0.53, 0.072)
            background_color:0,0,0,0
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            on_release:
                app.root.current = 'welcome'
            Image:
                source: 'images/Eng_login_back_button.png'
                size: self.parent.size
                center_x: self.parent.center_x
                center_y: self.parent.center_y


