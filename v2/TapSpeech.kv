#:import NoTransition kivy.uix.screenmanager.NoTransition

windowManager:
    #transition: NoTransition()
    welcomeScreen:
    loginScreen:
    registerScreen:
    patientUpScreen:
    patientDownScreen:
    contactsScreen:
    caretakerScreen:

<welcomeScreen>:
    FloatLayout:
        Label:
            text:'Welcome'
            font_name:'Pacifico'
        Button:
            size_hint : 0.3, 0.08
            pos_hint: {'x':0.5,'y':0.5}
            on_release: app.root.current = 'login'
            source : 'images/Login.png'
        Button:
            size_hint : 0.547, 0.042
            pos_hint: {'x':0.2523,'y':0.3}
            on_release: app.root.current = 'login'
            background_normal : 'images/Register.png'
        # Button:
            # source: 'images/Login.png'
            # keep_ratio: False
            # allow_stretch: True
            # opacity: 0.8
            # size_hint: 0.3, 0.4
            # pos_hint: {'center_x': 0.5, 'center_y': 0.75}
        Image:
            id: Logo_With_Text
            source: 'images/Logo_With_Text.png'
            pos_hint: {'x':0.1,'y':0.1}
            #size_hint: {}

<loginScreen>:
    canvas.before:
        Color:
            rgba: 0.88, 0.92, 0.92, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/English_login_background.png'

    FloatLayout:
        # Fix below line from button to text field
        Button:
            size_hint: (0.82, 0.085)
            background_color:0,0,0,0
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            Image:
                source: 'images/Eng_login_username_button.png'
                size: self.parent.size
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        # Fix below line from button to text field
        Button:
            size_hint: (0.82, 0.085)
            background_color:0,0,0,0
            pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            Image:
                source: 'images/Eng_login_birthday.png'
                size: self.parent.size
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            size_hint: (0.53, 0.072)
            background_color:0,0,0,0
            pos_hint: {'center_x': 0.5, 'center_y': 0.35}
            on_release:
                app.root.current = 'welcome'
            Image:
                source: 'images/Eng_login_back_button.png'
                size: self.parent.size
                center_x: self.parent.center_x
                center_y: self.parent.center_y


