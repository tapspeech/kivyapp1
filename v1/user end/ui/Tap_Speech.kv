#:import NoTransition kivy.uix.screenmanager.NoTransition

WindowManager:
    transition: NoTransition()
    English_Window:
    Cantonese_Window:

<Label>:
    color:0,0,0,1

<Button>:
    font_size:40
    color:0,0,0,1
    background_normal:''
    # The below line makes it so that when you click down the button does not change colors
    #background_down:''
    size_hint: 0.2, 0.3

<English_Window>:
    name: 'English_Window'

    FloatLayout:
        Label:
            id: Thumb_label
            font_size:40
            pos_hint: {'x':-0.4,'y':0.4}
            text: 'Liquid'

        Label:
            id: Index_label
            font_size:40
            pos_hint: {'x':-0.2,'y':0.4}
            text: 'Toilet'

        Label:
            id: Middle_label
            font_size:40
            pos_hint: {'x':0,'y':0.4}
            text: 'Food'

        Label:
            id: Pinky_label
            font_size:40
            pos_hint: {'x':0.4,'y':0.4}
            text: 'Bed'

        Button:
            id: Thumb_Button
            font_size:40
            # Stupid code below
            pos_hint: {'x':0.00001,'y':0.1}
            background_color:0,0,0,0
            on_press:
                root.button_press('Thumb')
            Image:
                source: 'images/English_Thumb.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Index_Button
            font_size:40
            pos_hint: {'x':0.2,'y':0.4}
            background_color:0,0,0,0
            on_press:
                root.button_press('Index')
            Image:
                source: 'images/English_Index.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Middle_Button
            font_size:40
            pos_hint: {'x':0.4,'y':0.4}
            background_color:0,0,0,0
            on_press:
                root.button_press('Middle')
            Image:
                source: 'images/English_Middle.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Pinky_Button
            font_size:40
            pos_hint: {'x':0.8,'y':0.4}
            background_color:0,0,0,0
            on_press:
                root.button_press('Pinky')
            Image:
                source: 'images/English_Pinky.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Speak_Command_Button
            font_size:40
            pos_hint: {'x':0.2,'y':0.1}
            text: '    Speak\nCommand'
            color:0,1,0,1
            background_color:0,0.6,0,1
            on_press:
                root.button_press('Speak_Command')

        Button:
            id: Chinese_Button
            font_name: 'NotoSans'
            font_size:35
            size_hint: 0.2, 0.15
            pos_hint: {'x':0.6,'y':0.175}
            text: '中文模式'
            background_color:0.9,0.9,0.9,1
            on_press:
                app.root.current = 'Cantonese_Window'
                root.button_press('Cantonese')

        Image:
            id: Tall_Cylinder_Image
            source: 'images/Tall_Cylinder.png'
            pos_hint: {'x':0.2,'y':0.1}

<Cantonese_Window>:
    name: 'Cantonese_Window'
    FloatLayout:
        Label:
            id: Cantonese_Thumb_label
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':-0.4,'y':0.4}
            text: '飲品'

        Label:
            id: Cantonese_Index_label
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':-0.2,'y':0.4}
            text: '廁所'

        Label:
            id: Cantonese_Middle_label
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':0,'y':0.4}
            text: '食物'

        Label:
            id: Cantonese_Pinky_label
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':0.4,'y':0.4}
            text: '教床'

        Button:
            id: Cantonese_Thumb_Button
            font_name: 'NotoSans'
            font_size:45
            # Stupid code below
            pos_hint: {'x':0.00001,'y':0.1}
            background_color:0,0,0,0
            on_press:
                root.button_press('拇指')
            Image:
                source: 'images/Cantonese_Thumb.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Cantonese_Index_Button
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':0.2,'y':0.4}
            background_color:0,0,0,0
            on_press:
                root.button_press('食指')
            Image:
                source: 'images/Cantonese_Index.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Cantonese_Middle_Button
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':0.4,'y':0.4}
            background_color:0,0,0,0
            on_press:
                root.button_press('中指')
            Image:
                source: 'images/Cantonese_Middle.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Cantonese_Pinky_Button
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':0.8,'y':0.4}
            background_color:0,0,0,0
            on_press:
                root.button_press('小指')
            Image:
                source: 'images/Cantonese_Pinky.png'
                size: self.parent.size
                stretch: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: Cantonese_Speak_Command_Button
            font_name: 'NotoSans'
            font_size:45
            pos_hint: {'x':0.2,'y':0.1}
            text: '說話'
            color:0,1,0,1
            background_color:0,0.6,0,1
            on_press:
                root.button_press('Speak_Command')

        Button:
            id: English_Button
            font_size:30
            size_hint: 0.2, 0.15
            pos_hint: {'x':0.6,'y':0.175}
            text: 'English Mode'
            background_color:0.9,0.9,0.9,1
            on_press:
                app.root.current = 'English_Window'
                root.button_press('English')

        Image:
            id: Tall_Cylinder_Image
            source: 'images/Tall_Cylinder.png'
            pos_hint: {'x':0.2,'y':0.1}
