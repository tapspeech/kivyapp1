
# there are three screens
windowManager:
	loginWindow:
	signupWindow:
	logDataWindow:
	English_Window:

	Cantonese_Window:


# GUI for the login window
<loginWindow>:
	canvas.before:
		Color:
			rgba:1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	email : email
	pwd : pwd
	FloatLayout:
		size: root.width, root.height
		Label:
			text : "EMAIL: "
			font_name : "Barlow-light"
			font_size : 25
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.25, "top":0.9}
		TextInput:
			id : email
			multiline :False
			font_name : "Barlow-light"
			font_size : 34
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.45, "top" : 0.89}
		Label:
			text : "PASSWORD: "
			font_name : "Barlow-light"
			font_size : 25
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.21, "top" : 0.7}
		TextInput:
			id : pwd
			multiline :False
			size_hint : 0.3, 0.08
			pos_hint : {"x" : 0.45, "top" : 0.69}
		Button:
			text : "Create an Account"
			font_size : 30
			font_name : "Barlow-light"
			canvas.before:
				Color:
					rgba: 0, 0, 0, 1
				Line:
					width: 1
					rectangle: (self.x-10), (self.y-10), (self.width+20), (self.height+20)
			size_hint : 0.4, 0.1
			pos_hint : {"x" : 0.33, "top" : 0.4}
			on_release:
				app.root.current = 'signup'
				root.manager.transition.direction = "left"

		Button:
			text : "Login"
			font_name : "Barlow-light"
			font_size : 30
			canvas.before:
				Color:
					rgba: 0, 0, 0, 1
				Line:
					width: 1
					rectangle: (self.x-10), (self.y-10), (self.width+20), (self.height+20)
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.39, "top" : 0.2}
			on_release:
				root.validate()
				root.manager.transition.direction = "up"

